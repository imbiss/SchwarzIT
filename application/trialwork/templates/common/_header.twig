<header>
    <ul class="nav">
        {% for portal in portals %}
            <li class="nav-item">
                <a href="{{ path('home', { _locale: portal.locale } ) }}"
                   class="nav-link {% if portal.locale == currentLocale  %}active{% endif %}"
                   style="text-transform:uppercase;" >
                    {{ portal.locale }}
                </a>
            </li>
        {% endfor %}
    </ul>
</header>